@page "/new"
@inject DayLog.Services.EntryService EntryService
@using DayLog.Models
@code {
    Entry model = new Entry { Date = DateTime.Today };

    async Task Save()
    {
        await EntryService.SaveAsync(model);
        // navigate or show message
    }
}

<h3>New Entry</h3>

<div>
    <label>Date</label>
    <input type="date" @bind="model.Date" />
</div>

<div>
    <label>Content</label>
    <textarea rows="10" @bind="model.Content"></textarea>
</div>

<div>
    <label>Tags comma separated</label>
    <input @bind="model.Tags" />
</div>

<div>
    <button @onclick="Save">Save</button>
</div>
