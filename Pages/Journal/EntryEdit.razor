@page "/Edit-entry"
@using DayLog.Models
@using DayLog.Services.JournalService
@using DayLog.Components.Editor
@inject IJournalService JournalService
@inject NavigationManager Navigation

<div class="entry-editor card">
    <div class="card-body">
        <h2 class="mb-3">@(vm.Id == 0 ? "New Entry" : "Edit Entry")</h2>

        <EditForm Model="@vm" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label">Title</label>
                <InputText class="form-control" @bind-Value="vm.Title" placeholder="Entry title (optional)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Date</label>
                <InputDate class="form-control" @bind-Value="vm.EntryDate" />
            </div>

            <div class="mb-3">
                <label class="form-label">Mood</label>
                <InputSelect class="form-control" @bind-Value="vm.PrimaryMoodId">
                    <option value="0">-- select mood --</option>
                    @foreach (var m in Moods)
                    {
                        <option value="@m.Id">@m.Emoji @m.Name</option>
                    }
                </InputSelect>
                <ValidationSummary />
            </div>

            <div class="mb-3">
                <label class="form-label">Tags</label>
                <TagSuggest Value="@vm.TagsCsv" ValueChanged="@(v => vm.TagsCsv = v)" />
                <div class="form-text">Press Enter to add a custom tag or pick from suggestions.</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <QuillEditor Value="@vm.ContentHtml" ValueChanged="@(v => vm.ContentHtml = v)" HeightPx="200"
                    Placeholder="Write your journal entry..." />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                @if (!string.IsNullOrEmpty(StatusMessage))
                {
                    <div class="ms-3 text-muted">@StatusMessage</div>
                }
                @if (ConflictEntryId.HasValue)
                {
                    <button type="button" class="btn btn-outline-danger ms-2" @onclick="DeleteConflictAsync">Delete existing
                        (id:@ConflictEntryId)</button>
                }
            </div>
        </EditForm>
    </div>
</div>

@code {
    private EntryViewModel vm = new EntryViewModel();
    private string StatusMessage { get; set; } = string.Empty;
    private int? ConflictEntryId { get; set; }
    private string? ReturnUrl { get; set; }

    private record Mood(int Id, string Emoji, string Name);

    private readonly List<Mood> Moods = new()
{
new Mood(1, "😊", "Happy"),
new Mood(2, "😐", "Neutral"),
new Mood(3, "😢", "Sad"),
new Mood(4, "🤩", "Excited"),
new Mood(5, "😰", "Anxious"),
};

    // EntryViewModel defaults EntryDate to today; no initialization required here.

    protected override async Task OnParametersSetAsync()
    {
        // Check for query parameter 'id' to load an existing entry for edit
        var uri = new Uri(Navigation.Uri);
        var query = uri.Query ?? string.Empty; // like "?id=123"
        if (!string.IsNullOrWhiteSpace(query))
        {
            var trimmed = query.TrimStart('?');
            var pairs = trimmed.Split('&', StringSplitOptions.RemoveEmptyEntries);
            var dict = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
            foreach (var p in pairs)
            {
                var kv = p.Split('=', 2);
                if (kv.Length == 2)
                {
                    var key = Uri.UnescapeDataString(kv[0]);
                    var val = Uri.UnescapeDataString(kv[1]);
                    dict[key] = val;
                }
            }

            if (dict.TryGetValue("id", out var idStr) && int.TryParse(idStr, out var id) && id > 0 && vm.Id != id)
            {
                var res = await JournalService.GetByIdAsync(id);
                if (res.Success && res.Data != null)
                {
                    var d = res.Data;
                    vm.Id = d.Id;
                    vm.EntryDate = d.EntryDate;
                    vm.Title = d.Title;
                    vm.ContentHtml = d.ContentHtml;
                    vm.PrimaryMoodId = d.PrimaryMoodId;
                    vm.TagsCsv = d.TagsCsv;
                }
            }
            else
            {
                // If no id provided, allow pre-setting the date via ?date=yyyy-MM-dd
                if (dict.TryGetValue("date", out var dateStr))
                {
                    if (DateTime.TryParseExact(dateStr, "yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture,
                    System.Globalization.DateTimeStyles.None, out var parsed))
                    {
                        vm.EntryDate = parsed.Date;
                    }
                    else
                    {
                        // Try flexible parse as fallback
                        if (DateTime.TryParse(dateStr, out var p2)) vm.EntryDate = p2.Date;
                    }
                }
            }
            // also capture optional returnUrl
            if (dict.TryGetValue("returnUrl", out var ret))
            {
                try { ReturnUrl = Uri.UnescapeDataString(ret); } catch { ReturnUrl = ret; }
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        StatusMessage = "Saving...";
        ConflictEntryId = null;
        var res = await JournalService.SaveAsync(vm);
        if (res.Success)
        {
            if (!string.IsNullOrWhiteSpace(ReturnUrl)) Navigation.NavigateTo(ReturnUrl, true);
            else Navigation.NavigateTo("/dashboard");
        }
        else
        {
            StatusMessage = res.ErrorMessage ?? "Save failed";
            // detect conflict id pattern like "(id:123)" and expose action buttons
            if (!string.IsNullOrEmpty(res.ErrorMessage))
            {
                var idx = res.ErrorMessage.IndexOf("id:", StringComparison.OrdinalIgnoreCase);
                if (idx >= 0)
                {
                    var rest = res.ErrorMessage.Substring(idx + 3);
                    var digits = new string(rest.TakeWhile(c => char.IsDigit(c)).ToArray());
                    if (int.TryParse(digits, out var parsed)) ConflictEntryId = parsed;
                }
            }
        }
    }

    private async Task DeleteConflictAsync()
    {
        if (!ConflictEntryId.HasValue) return;
        var delRes = await JournalService.DeleteAsync(ConflictEntryId.Value);
        if (delRes.Success)
        {
            StatusMessage = $"Deleted existing entry (id:{ConflictEntryId.Value}). You can now save a new entry.";
            ConflictEntryId = null;
        }
        else
        {
            StatusMessage = delRes.ErrorMessage ?? "Delete failed.";
        }
    }

    private void Cancel()
    {
        if (!string.IsNullOrWhiteSpace(ReturnUrl)) Navigation.NavigateTo(ReturnUrl, true);
        else Navigation.NavigateTo("/dashboard");
    }
}